<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="configuration_converter.routing_converter.fluent_dsl"
                 class="ConfigurationConverter\Converters\Routing\FluentDSLConverter"
                 public="false"
        >
            <tag name="configuration_converter.routing_converter"/>
            <argument type="service">
                <service class="FileLocator">
                    <argument type="collection">
                        <argument>%kernel.project_dir%</argument>
                    </argument>
                </service>
            </argument>
        </service>
    </services>
</container>
